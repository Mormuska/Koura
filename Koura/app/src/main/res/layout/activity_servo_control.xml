<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.soudunsaari.koura.Control">
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/joystick"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <ImageButton
            android:id="@+id/btnLeft"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_row="1"
            android:layout_column="0"
            />
        <ImageButton
            android:id="@+id/btnUp"
            android:src="@drawable/ic_expand_less_black_24dp"
            android:layout_row="0"
            android:layout_column="1"
            />
        <ImageButton
            android:id="@+id/btnRight"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_row="1"
            android:layout_column="2"
            />
        <ImageButton
            android:id="@+id/btnDown"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:layout_row="2"
            android:layout_column="1"
            />



    </GridLayout>
    <com.jmedeisis.bugstick.Joystick
        android:id="@+id/joystick"
        android:layout_width="@dimen/stick_area_size"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_base"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <!-- You may use any View here. -->
        <Button
            android:id="@+id/btnJoystick"
            android:clickable="false"
            android:layout_width="@dimen/stick_size"
            android:layout_height="@dimen/stick_size"
            android:background="@drawable/bg_stick" />

    </com.jmedeisis.bugstick.Joystick>
</android.support.constraint.ConstraintLayout>











